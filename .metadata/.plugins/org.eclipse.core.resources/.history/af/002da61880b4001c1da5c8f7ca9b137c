			cpf = JOptionPane.showInputDialog("Digite seu cpf: ");
			tel = Integer.parseInt(JOptionPane.showInputDialog("Digite seu telefone: "));
			
			Cliente cliente = new Cliente(nome, end, email, cpf, tel);
		}
		else{
			
		}
	}
}
