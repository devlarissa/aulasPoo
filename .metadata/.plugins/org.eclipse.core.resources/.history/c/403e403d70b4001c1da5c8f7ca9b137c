package aula_8;

import javax.swing.JOptionPane;

public class CalculadoraJOptioPane {

	public static void main(String[] args) {
		
		float numero1, numero2, result;
		
		String operacao = JOptionPane.showInputDialog("Digite a operação: \nEx: som, sub, div, mult");
		numero1 = Float.parseFloat(JOptionPane.showInputDialog("Digite o primeiro numnero: "));
		numero2 = Float.parseFloat(JOptionPane.showInputDialog("Digite o segundo numnero: "));
		
		switch(operacao){
		case "som":
			result = numero1 + numero2;
			break;
		case "sub":
			result = numero1 - numero2;
			break;
		case "mult":
			result = numero1 * numero2;
			break;
		case "div":
			if(numero2 == 0.0){
				JOptionPane.showMessageDialog(null, "não é possivel dividir por zero");
			} else {
				result = numero1 / numero2;
			}
			break;
		}
	}
}
